<Page x:Class="NarutoKurs.AddTechniquePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoKurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTechniquePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="242,0,0,0">
            <TextBox x:Name="TechniqueNameTextBox" Grid.Row="2" Width="177" VerticalAlignment="Top" Margin="135,40,0,0" Height="22"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Margin="242,5,0,85" Grid.RowSpan="2">
            <ComboBox x:Name="RangTechTierComboBox" Grid.Row="3" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="135,50,0,0">
                <ComboBoxItem Content="Не имеется ранга"/>
                <ComboBoxItem Content="Ранг-E"/>
                <ComboBoxItem Content="Ранг-D"/>
                <ComboBoxItem Content="Ранг-C"/>
                <ComboBoxItem Content="Ранг-B"/>
                <ComboBoxItem Content="Ранг-A"/>
                <ComboBoxItem Content="Ранг-S"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Margin="242,10,0,80" Grid.RowSpan="2">
            <ComboBox x:Name="SubtypeNameComboBox" Grid.Row="4" Width="175" VerticalAlignment="Top" Margin="135,51,0,0">
                <ComboBoxItem Content="Не имеется техники"/>
                <ComboBoxItem Content="Ниндзюцу Барьера"/>
                <ComboBoxItem Content="Букидзюцу"/>
                <ComboBoxItem Content="Техники Поглощения Чакры"/>
                <ComboBoxItem Content="Техники Клонирования"/>
                <ComboBoxItem Content="Фууиндзюцу"/>
                <ComboBoxItem Content="Хидзюцу"/>
                <ComboBoxItem Content="Джуиндзюцу"/>
                <ComboBoxItem Content="Джудзюцу"/>
                <ComboBoxItem Content="Киндзюцу"/>
                <ComboBoxItem Content="Медицинские Ниндзюцу"/>
                <ComboBoxItem Content="Ниншуу"/>
                <ComboBoxItem Content="Нинтайдзюцу"/>
                <ComboBoxItem Content="Сендзюцу"/>
                <ComboBoxItem Content="Сюрикендзюцу"/>
                <ComboBoxItem Content="Пространственно-Временные Ниндзюцу"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Margin="242,0,0,0">
            <ComboBox x:Name="TypeNameComboBox" Grid.Row="5" Width="176" VerticalAlignment="Top" Margin="135,51,0,0">
                <ComboBoxItem Content="Не имеется техники"/>
                <ComboBoxItem Content="Ниндзюцу (Техники Ниндзя)"/>
                <ComboBoxItem Content="Гендзюцу (Иллюзорные Техники)"/>
                <ComboBoxItem Content="Тайдзюцу (Техники Тела)"/>

            </ComboBox>
        </StackPanel>
        <Button Style="{StaticResource GelButton}" Content="Сохранить"  Width="150" Height="25" Click="btnAdd_Click" Margin="5,10,10,5" Grid.Row="6"/>
        <Button Style="{StaticResource GelButton}" x:Name="btnBack" Content="Вернуться на страницу техник" Click="btnBack_Click" Margin="67,35,510,30" Grid.Row="4"/>
        <Label Foreground="White" Content="Название" HorizontalAlignment="Left" Margin="211,30,0,0" VerticalAlignment="Top" Height="45" Width="135" FontSize="20"/>
        <Label Foreground="White" Content="Тип" HorizontalAlignment="Left" Margin="211,45,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="114" FontSize="20"/>
        <Label Foreground="White" Content="Подтип" HorizontalAlignment="Left" Margin="211,45,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="20"/>
        <Label Foreground="White" Content="Ранг" HorizontalAlignment="Left" Margin="211,45,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="20"/>

    </Grid>

</Page>
