<Page x:Class="NarutoKurs.CaudatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoKurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaudatePage">

    <Grid>
        <DataGrid x:Name="Caudate" AutoGenerateColumns="False" Margin="0,1,0,0" SelectionChanged="Caudate_SelectionChanged">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="35" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="SizeToHeader" FontSize="14" Binding="{Binding ID}" />
                <DataGridTextColumn Header="Name" Width="*" FontSize="14" Binding="{Binding CaudateName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
