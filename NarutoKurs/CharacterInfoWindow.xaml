<Window x:Class="NarutoKurs.CharacterInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NarutoKurs"
        mc:Ignorable="d"
        Title="CharacterInfoWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\zend1\Desktop\NarutoKurs\NarutoKurs\image\свиток.jpg"/>
    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="1000"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding CharacterName}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"  Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="{Binding Rang}" Margin="0,0,0,5" Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <TextBlock Text="{Binding Clan}" Margin="0,0,0,5" Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <TextBlock Text="{Binding Caudate}" Margin="0,0,0,5" Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4">
            <TextBlock Text="{Binding Teams}" Margin="0,0,0,5" Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5">
            <TextBlock Text="{Binding RangTech}" Margin="0,0,0,5"  Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6">
            <TextBlock Text="{Binding Techniques}" Margin="0,0,0,5"  Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="7">
            <TextBlock Text="{Binding TypeTech}" Margin="0,0,0,5"  Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="8">
            <TextBlock Text="{Binding SubTypesTech}" Margin="0,0,0,5" Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="9">
            <TextBlock Text="{Binding Vilages}" Margin="0,0,0,5"  Style="{StaticResource UnusualFontStyle}"/>
            </StackPanel>
    </Grid>
</Window>
