<Page x:Class="NarutoKurs.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoKurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registr">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>


        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Foreground="White" Text="Логин" Width="100" TextAlignment="Right" VerticalAlignment="Center" Margin="10" Style="{StaticResource CustomTextBlockStyle}"/>
            <TextBox x:Name="tbtName" Width="150" Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Foreground="White" Text="Почта" Width="100" TextAlignment="Right" VerticalAlignment="Center" Margin="10" Style="{StaticResource CustomTextBlockStyle}"/>
            <TextBox x:Name="tbtDr" Width="150" Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <TextBlock Foreground="White" Text="Пароль" Width="100" TextAlignment="Right" VerticalAlignment="Center" Margin="10" Style="{StaticResource CustomTextBlockStyle}"/>
            <TextBox x:Name="tbtTel" Width="150" Height="25"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4">
            <TextBlock Text="" Width="100" TextAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <Button Style="{StaticResource GelButton}" x:Name="btnBack" Content="Вернуться на страницу авторизации" Width="223" Height="34" Click="btnBack_Click" Margin="5,10,10,5"/>

            <Button Style="{StaticResource GelButton}" x:Name="btnAdd" Content="Зарегистрироваться" Width="150" Height="34" Click="btnAdd_Click" Margin="5,10,10,5"/>
        </StackPanel>
    </Grid>
</Page>
