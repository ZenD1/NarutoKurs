<Page x:Class="NarutoKurs.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoKurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
    <Grid>

        <!-- Задний фон страницы -->
        <Grid VerticalAlignment="Center" x:Name="MainGrid" Height="315">
            <!-- Центрирование содержимого -->
            <!-- Форма для ввода логина и пароля -->
            <StackPanel Margin="20">
                <Grid Margin="5,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource CustomTextBlockStyle}" Foreground="White" Text="Логин:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtUsername" Width="200" Margin="0,5" Grid.Column="1"/>
                </Grid>

                <Grid Height="36" Margin="5,50,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource CustomTextBlockStyle}" Text="Пароль:" Foreground="White" VerticalAlignment="Top" Margin="5,10,5,0"/>
                    <PasswordBox x:Name="txtPassword" Width="200" Margin="238,10,250,0" Grid.Column="1"/>
                </Grid>
                <Button Style="{StaticResource GelButton}" Content="Войти" Width="100" Click="Login_Click" Margin="5,30,5,5"/>
                <Button Style="{StaticResource GelButton}" Content="Зарегистрироваться" Width="150" Click="Register_Click"  Margin="5,30,5,5" Height="22"/>

                <!-- Кнопка для входа -->

                <!-- Кнопка для регистрации -->
            </StackPanel>
        </Grid>
    </Grid>
</Page>
