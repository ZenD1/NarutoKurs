<Page x:Class="NarutoKurs.Characters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoKurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Characters">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\zend1\Desktop\NarutoKurs\NarutoKurs\image\фонподперсов.jpg" />
        </Grid.Background>
        <ListBox x:Name="charactersListBox" SelectionChanged="CharacterSelected" HorizontalContentAlignment="Stretch">
            <ListBox.Background>
                <ImageBrush ImageSource="C:\Users\zend1\Desktop\NarutoKurs\NarutoKurs\image\фонподперсов.jpg" />
            </ListBox.Background>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Первый столбец -->
                            <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <StackPanel Orientation="Vertical" Height="auto">
                                    <Button Content="Получить информацию" Click="GetInfo_Click" Height="60" Width="200" Margin="5,5,5,5" Style="{StaticResource OrangeButton}"/>
                                    <Button Content="Получить видео" Click="GetVideo_Click" Height="60" Width="200" Margin="5,60,5,5" Style="{StaticResource OrangeButton}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Второй столбец -->
                            <Viewbox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="Uniform">
                                <StackPanel Orientation="Vertical">
                                    <Image Width="300" Height="200" Source="{Binding Photo}" Stretch="UniformToFill"/>
                                    <TextBlock Text="{Binding Name}" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Wheat"/>
                                </StackPanel>
                            </Viewbox>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>



</Page>
